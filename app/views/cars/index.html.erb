<div class="my-container">
  <ul>
    <% @cars.each do |car| %>
      <li class="car-card">
        <div class="car-info">
          <%= link_to car.brand, car_path(car) %>
          <h4><%= car.model %></h4>
          <p><%= car.created_at.strftime("%a %b %u at %H:%M") %></p>
          <hr class="divider">
        </div>
        <%= image_tag car.image_url %>
        <div class="car-info">
          <i class="fa-solid fa-comment"></i><%= link_to "Comment", car_path(car) %>
        </div>
         <p class="nickname-element"><%= car.owner.nickname %></p>
      </li>
    <% end %>
  </ul>
</div>
