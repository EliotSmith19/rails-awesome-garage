<ul>
  <% @favourites.each do |favourite| %>
    <li>
      <%= favourite.car.brand %>
      <%= favourite.car.model %>
      <%= favourite.car.year %> | <%= favourite.car.fuel %>
      <%= link_to "Delete", favourite_path(favourite),
