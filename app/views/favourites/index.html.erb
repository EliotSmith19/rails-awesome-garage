<div class="my-container">
    <h1 id="garage-title">MY GARAGE</h1>
      <% @favourites.each do |favourite| %>
      <div class="garage-card">
          <%= image_tag favourite.car.image_url %>

          <div class="garage-info">
            <h3><%= favourite.car.brand %></h3>
            <h4><%= favourite.car.model %></h4>
            <p><%= favourite.car.year %> | <%= favourite.car.fuel %></p>

            <%= link_to favourite_path(favourite), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        </div>
      <% end %>
</div>
